@model EjarTech.Models.AccountsModel.Login
@inject EjarTech.Services.LanguageServies.Helpers.ITranslationProvider Translate
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="row br-2" action="@Url.Action("Login", "Accounts")" method="POST">
    <div class="small-12 medium-2 large-2 columns"></div>
    <div class="small-12 medium-8 large-8 columns br-1 shdow">
        <div class="row" style="background-color: #008FCC;text-align: center;color: white; font-size: 35px;border-bottom: 3px solid #cc0000;border-radius: 2px;"><div class="small-12 medium-12 large-12 columns br-2">@Translate["login"]</div></div>
        <br><br>
        <div class="row" style="text-align: center;">
            <span asp-validation-for="Phone" class="small-12 medium-12 large-12 columns"></span>
            <span asp-validation-for="Password" class="small-12 medium-12 large-12 columns"></span>
        </div>
        <div class="row">
            <div class="small-12 meduim-4 large-4"></div>
            <div class="small-12 meduim-4 large-4"><h5 style="text-align: center;" class="warning">@ViewData["note"]</h5></div>
            <div class="small-12 meduim-4 large-4"></div>
        </div>
        <div class="row">
            <div class=" medium-2 large-2 columns"></div>
            <div class="small-12 medium-8 large-8 columns "><input asp-for="Phone" style="margin-right: auto; margin-left: auto; text-align:center;" class="br" placeholder="@Translate["phone_number"]"></div>
            <div class=" medium-2 large-2 columns"></div>
        </div>
        <div class="row">
            <div class=" medium-2 large-2 columns"></div>
            <div class="small-12 medium-8 large-8 columns"><input asp-for="Password" style="margin-right: auto; margin-left: auto; text-align:center;" class="br" placeholder="@Translate["password"]"></div>
            <div class=" medium-2 large-2 columns"></div>
        </div>
        <div class="row">
            <div class="small-1 medium-4 large-4 columns"></div>
            <div class="small-10 medium-4 large-4 columns " style="text-align: center;"><a href="@Url.Action("ForgetPassword", "Accounts")" style="margin-right: auto; margin-left: auto; text-align:center;" >@Translate["do_you_forget_password"]</a></div>
            <div class="small-1 medium-4 large-4 columns"></div>
        </div>
        <br>
        <div class="row">
            <div class="small-12 medium-2 large-2 columns"></div>
            <div class="small-12 medium-8 large-8 columns">
                <button type="submit" class="alert button expanded">@Translate["login"]</button>
            </div>
        </div>
        <div class="small-12 medium-2 large-2 columns"></div>
    </div>
    <div class="small-12 medium-2 large-2 columns"></div>
</form>