@model System.Collections.Generic.IList<EjarTech.Models.DatabaseModels.User>
@inject EjarTech.Services.LanguageServies.Helpers.ITranslationProvider Translate
@{
    ViewData["Title"] = "ViewCompanyes";
    Layout = "~/Views/Shared/Dashbord.cshtml";
}

<style>
    .center-text {
        text-align: center;
    }

    .big-font {
        font-size: 36px;
    }

    .med-font {
        font-size: 26px;
    }
</style>
<div class="row">
    <div class="small-12 meduimm-4 large-4 columns center-text big-font">@Translate["user_name"]</div>
    <div class="small-12 meduimm-4 large-4 columns center-text big-font">@Translate["phone_number_s"]</div>
    <div class="small-12 meduimm-4 large-4 columns center-text big-font">@Translate["block"]\@Translate["de_block"]</div>
</div>
<div class="row expanded">
    <div class="small-12 meduimm-12 large-12 columns center-text big-font"><hr /></div>
</div>
@foreach (EjarTech.Models.DatabaseModels.User item in Model)
{
    <div class="row">
        <div class="small-12 meduim-4 large-4 columns center-text med-font">@item.FullName</div>
        <div class="small-12 meduim-4 large-4 columns center-text med-font">@item.PhoneNumber</div>
        @if (item.IsBlocked)
        {
            <div class="small-12 meduim-4 large-4 columns center-text med-font"><a asp-action="BlockAndDeBlockUser" style="color: red;" asp-route-id="@item._id.ToString()">@(item.IsBlocked == true ? Translate["de_block"] : Translate["block"])</a></div>
        }
        else
        {
            <div class="small-12 meduim-4 large-4 columns center-text med-font"><a asp-action="BlockAndDeBlockUser" style="color: green;" asp-route-id="@item._id.ToString()">@(item.IsBlocked == true ? Translate["de_block"] : Translate["block"])</a></div>
        }
    </div>

    <div class="row expanded">
        <div class="small-12 meduimm-12 large-12 columns center-text med-font"><hr /></div>
    </div>
}
