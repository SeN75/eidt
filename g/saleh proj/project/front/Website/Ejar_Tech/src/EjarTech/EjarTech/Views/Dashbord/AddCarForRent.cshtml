    <div style="text-align: center;" class="small-12 meduim-12 large-12 columns">
        <span style="color: #f00; font-size: 20px; font-weight: 400;">@ViewData["notes"]</span>
    </div>
    <div style="text-align: center;" class="small-12 meduim-12 large-12 columns">
        <span style="color: #f00; font-size: 20px; font-weight: 400;" asp-validation-for="CarType"></span>
    </div>
    <div style="text-align: center;" class="small-12 meduim-12 large-12 columns">
