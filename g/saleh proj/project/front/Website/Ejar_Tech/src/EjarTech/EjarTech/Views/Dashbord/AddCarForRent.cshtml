@model EjarTech.Models.DashbordModel.AddCarForRent
@inject EjarTech.Services.LanguageServies.Helpers.ITranslationProvider Translate
@inject Microsoft.Extensions.Options.IOptions<EjarTech.Models.ConfigurationModel.CarsCatalog> catalog
@{
    ViewData["Title"] = "AddCar";
    Layout = "~/Views/Shared/Dashbord.cshtml";
    List<SelectListItem> typeItems = new List<SelectListItem>();
    foreach (string item in catalog.Value.CarTypes)
    {
        typeItems.Add(new SelectListItem() { Text = Translate[item].ToString(), Value = item });
    }
    List<SelectListItem> companysNames = new List<SelectListItem>();
    foreach (string item in catalog.Value.Companys)
    {
        companysNames.Add(new SelectListItem() { Text = Translate[item].ToString(), Value = item });
    }

}

