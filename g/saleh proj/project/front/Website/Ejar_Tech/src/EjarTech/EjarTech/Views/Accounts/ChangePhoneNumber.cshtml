@model EjarTech.Models.AccountsModel.ChangePhoneNumber
@inject EjarTech.Services.LanguageServies.Helpers.ITranslationProvider Translate
@{
    ViewData["Title"] = "ChangePhoneNumber";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Styles {
    <style>
        .active {
            background-color: #2268d7;
        }

        .top-cell a {
            color: white;
        }
    </style>
}
<h4 style="text-align: center;">@Translate["confirm_change_number"]</h4>
<div class="row top-cell" style="background: #134eaa;">
    <div class="small-12 meduim-4 large-4 columns" style="text-align:center;"><a href="@Url.Action("Settings", "Accounts")">@Translate["change_account_settings"]</a></div>
    <div class="small-12 meduim-4 large-4 columns" style="text-align:center;"><a href="@Url.Action("ChangePassword", "Accounts")">@Translate["change_password"]</a></div>
    <div class="small-12 meduim-4 large-4 columns active" style="text-align:center;"><a href="@Url.Action("ChangePhoneNumber", "Accounts")">@Translate["change_phone_number"]</a></div>
</div>
<form id="formatter" asp-action="ChangePhoneNumber" method="POST">
    <div class="row">
        <div class="small-12 meduim-4 large-4 columns"></div>
        <div class="small-12 meduim-4 large-4 columns">
            <br />
            <input asp-for="NewNumber" placeholder="@Translate["phone_number"]" style="margin-right: auto; margin-left: auto;" />
            <button onclick="submittingForm();" class="button expanded warning">@Translate["confirm"]</button>
        </div>
        <div class="small-12 meduim-4 large-4 columns"></div>
    </div>
</form>